<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Metaverse</title>
    {{ encore_entry_link_tags('app') }}
</head>
    <div class="header">
        <nav class="header-nav">
            <button class="header-button" onclick="window.location.href='{{path('home')}}'">Accueil</button>
            {% if app.user %}
                <button class="header-button" onclick="window.location.href='{{path('app_logout')}}'">Deconnexion</button>
            {% else %}
                <button class="header-button" onclick="window.location.href='{{path('app_login')}}'">Connexion</button>
            {% endif %}
        </nav>
        <div class="title-div">
            <h1 class="title">Blog Innovations</h1>
        </div>
        <nav class="header-nav">
            <button class="header-button" onclick="window.location.href='{{path('app_article_index')}}'">Articles</button>
            <button class="header-button" onclick="window.location.href='{{path('app_category_index')}}'">Catégories</button>
        </nav>
    </div>
    <body>
        {% if app.user %}
            <button class="show-profile-button" onclick="window.location.href='{{path('app_user_show', {'id': app.user.id}) }}'">Mon profil</button>
        {% endif %}
        
        {% block body %}{% endblock %}
    </body>
    <div class="footer">
        <div class="creator">
            <p>Créé par : Rémi Dubreucq</p>
        </div>
        <div class="social">
            <a href="https://twitter.com/EcoleStudi" target="_blank"><img src="{{ asset('/assets/img/twitter.png')}}" alt="twitter" class="twitter"></a>
        </div>
        <div class="contact">
            <a href="mailto:remi.dubreucq.code@gmail.com">Remi.Dubreucq.code@gmail.com</a>
        </div>
    </div>
</html>
